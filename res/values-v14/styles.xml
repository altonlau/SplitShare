<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    
    <style name="SSAppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/SSActionBar</item>
        <item name="android:background">@color/ssniagara</item>
    </style>
    
    <style name="SSNoActionBarTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:background">@color/ssniagara</item>
    </style>

    <!-- ActionBar styles -->
    <style name="SSActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ssniagara</item>
    </style>

</resources>
